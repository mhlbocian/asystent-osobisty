        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="2,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF273151" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <FlipView>
            <FlipViewItem>
                <Image Source="Assets/welcome-scr1.png" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </FlipViewItem>
            <FlipViewItem>
            </FlipViewItem>
        </FlipView>
    </Grid>
</Page>
